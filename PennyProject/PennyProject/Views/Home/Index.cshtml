@model PennyProject.Models.MoviePageDto.HomePageDto


<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
        font-family: 'Arial', sans-serif;
    }

    .movie-section {
        margin: 2rem 0;
    }

    .section-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        padding-left: 2rem;
        color: #fff;
    }

    .movie-row {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        padding: 1rem 2rem;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

        .movie-row::-webkit-scrollbar {
            display: none;
        }

    .movie-card {
        flex: 0 0 auto;
        width: 200px;
        margin-right: 1rem;
        transition: transform 0.3s ease;
        position: relative;
    }

        .movie-card:hover {
            transform: scale(1.05);
            z-index: 2;
        }

    .movie-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
    }

    .movie-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0,0,0,0.9));
        padding: 1rem;
        border-radius: 0 0 8px 8px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .movie-card:hover .movie-info {
        opacity: 1;
    }

    .movie-title {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: #fff;
    }

    .movie-year {
        font-size: 0.9rem;
        color: #aaa;
    }

    .scroll-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.7);
        border: none;
        color: white;
        padding: 1rem;
        cursor: pointer;
        z-index: 3;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

    .scroll-left {
        left: 0;
    }

    .scroll-right {
        right: 0;
    }

    .scroll-button:hover {
        background: rgba(255,255,255,0.1);
    }

    .favorite-icon {
        position: absolute;
        bottom: 10px;
        right: 10px;
        color: white;
        font-size: 24px;
        cursor: pointer;
        z-index: 3;
        transition: all 0.3s ease;
    }

        .favorite-icon:hover {
            transform: scale(1.2);
        }

        .favorite-icon.fas {
            color: #ff4d4d;
        }
</style>

<div class="container-fluid">
    @foreach (var country in Model.MoviesByCountry)
    {
        <div class="movie-section">
            <h2 class="section-title">@country.Key</h2>
            <div class="position-relative">
                <button class="scroll-button scroll-left">❮</button>
                <div class="movie-row">
                    @foreach (var movie in country.Value)
                    {
                        <div class="movie-card">
                            <img src="~/movieImg/@(movie.MovieImgName).jpg" alt="@movie.MovieChinessName" class="movie-image">
                            <div class="movie-info">
                                <div class="movie-title">@movie.MovieChinessName</div>
                                <div class="movie-year">@movie.ReleaseDateTime?.Year</div>
                            </div>
                            <i class="@(movie.IsFavorite ? "fas" : "far") fa-heart favorite-icon"
                               data-movie-id="@movie.MovieId"></i>
                        </div>
                    }
                </div>
                <button class="scroll-button scroll-right">❯</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.scroll-button.scroll-left').click(function () {
                var movieRow = $(this).siblings('.movie-row');
                movieRow.animate({
                    scrollLeft: '-=800'
                }, 300);
            });

            $('.scroll-button.scroll-right').click(function () {
                var movieRow = $(this).siblings('.movie-row');
                movieRow.animate({
                    scrollLeft: '+=800'
                }, 300);
            });

            $('.favorite-icon').click(function () {
                var $icon = $(this);
                var movieId = $icon.data('movie-id');

                $icon.css('pointer-events', 'none');

                if ($icon.hasClass('far')) {  // 空心愛心
                    addFavorite($icon, movieId);
                } else {  // 實心愛心
                    removeFavorite($icon, movieId);
                }
            });
        });

        function addFavorite($icon, movieId) {
            $.ajax({
                url: '/api/favorite',
                type: 'POST',
                data: { movieId: movieId },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        $icon.removeClass('far').addClass('fas');
                    } else {
                        alert(response.message || 'add failed..');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    alert('add failed...please wait');
                },
                complete: function () {
                    $icon.css('pointer-events', 'auto');
                }
            });
        }

        function removeFavorite($icon, movieId) {
            $.ajax({
                url: '/api/favorite',
                type: 'DELETE',
                data: { movieId: movieId },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        $icon.removeClass('fas').addClass('far');
                    } else {
                        alert(response.message || 'remove failed..');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                    alert('remove failed..please wait');
                },
                complete: function () {
                    $icon.css('pointer-events', 'auto');
                }
            });
        }
    </script>
}